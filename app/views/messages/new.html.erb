<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="panel panel-default">
			  <div class="panel-body">
			    <h3>Send a message to <%= "#{@user.first_name}" %></h3>
			    <%= form_tag({controller: "messages", action: "create"}, method: :post) do %>
						<div class="form-group">
							<%= label_tag :subject %>
				      <%= text_field_tag :subject, nil, class: "form-control", autofocus: true %>
						</div>
						<div class="form-group">
							<%= label :body, "Message text" %>
							<%= text_area_tag :body, nil, class: "form-control" %>
				      <%= hidden_field_tag(:user, "#{@user.id}") %>
						</div>
						<div class="form-group">
							<%= submit_tag 'Send message', class: "button button-small" %>
						</div>
			    <% end %>
			  </div>
			</div>
		</div>
	</div>
</div>