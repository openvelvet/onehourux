<%= bootstrap_form_for([@profile]) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h4>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <% if current_user.provider != "linkedin" %>
    <div class="form-group">
      <%= f.file_field :image, label: "Upload image of yourself" %>
    </div>
    <div class="form-group">
      <%= f.text_field :title, placeholder: "User Experience Designer", class: "form-control", autofocus: true, label: "What is your current title?" %>
    </div>
    <div class="form-group">
      <%= f.text_field :company, placeholder: "Enter company", class: "form-control", label: "What company do you currently work at?" %>
    </div>
    <div class="form-group">
      <%= f.text_area :summary, placeholder: "Enter your professional summary", class: "form-control", label: "Tell us about yourself" %>
    </div>
    <div class="form-group">
      <%= f.text_field :location, placeholder: "Enter location", class: "form-control", label: "What city do you live in?" %>
    </div>
    <div class="form-group">
      <%= f.text_field :linked_link, prepend: "https://www.linkedin.com/", placeholder: "Enter LinkedIn profile link", class: "form-control", label: "What is the link to your LinkedIn profile?" %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.text_field :tag_list, value: @profile.tag_list.to_s, placeholder: "Wireframing, Mental Models, Rapid Prototyping", label: "List your skills (seperate with comma)", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :industry_list, value: @profile.industry_list.to_s, placeholder: "Digital Marketing, eCommerce, Healthcare, Accounting", label: "List your industries of experience (seperate with comma)" %>
  </div>
  <div class="form-group">
    <%= f.text_field :company_list, value: @profile.company_list.to_s, placeholder: "Disney, Sony, Apple, Google", label: "List all the companies you worked for" %>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <%= f.text_field :portfolio_link, placeholder: "www.exampleportfolio.com", class: "form-control", label: "What is the link to your portfolio" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.select(:experience_level, ["Entry Level", "Mid-Level", "Senior-Level", "C-Level"], { label: "Experience Level" }, { class: "form-control" }) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.select(:years_of_experience, ["0 - 1 year", "1 - 3 years", "3 - 5 years", "5 - 10 years", "10+ years"], { label: "Years of Experience" }, { class: "form-control" }) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.number_field :price, prepend: "$", append: "/hour", label: "Hourly Rate", class: "form-control", placeholder: "100" %>
      </div>
    </div>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit " Submit ", class: "button button-small" %>
  </div>
<% end %>
