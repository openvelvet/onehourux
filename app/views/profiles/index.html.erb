<div class="row">
	<div class="col-md-3">
		<div class="thumbnail">
			<div class="caption">
				<h4>Filters</h4>
				<p>Hello Worl</p>
			</div> <!-- caption -->
		</div> <!-- close thumbnail -->
	</div> <!-- col-md-3 -->
	<div class="col-md-9">
		<% @profiles.each do |profile| %>
			<div class="thumbnail">
				<div class="row">
					<div class="col-md-3">
						<div class="caption center">
							<%= image_tag(profile.user.linkedin_photo_url, width: "100px", height: "100px", class: "pic") %><br>							
							<h3 class="center"><%= number_to_currency(profile.price) %><br><h4 class="center">per hour</h4></h3>
						</div> <!-- caption -->
					</div> <!-- close md-3 -->
					<div class="col-md-9">
						<div class="caption">
							<%= link_to "View Profile", profile_path(profile), class: "button button-small pull-right" %>
							<h3 style="margin-top: 0px"><%= "#{profile.user.first_name} #{profile.user.last_name}" %></h3>
							<h4><%= profile.user.headline %></h4>
							<h4><%= profile.user.location %></h4>
							<p><%= profile.user.summary %></p>
						</div> <!-- caption -->
					</div> <!-- close md-9 -->
				</div> <!-- row -->
			</div> <!-- close thumbnail -->
		<% end %> <!-- close .each loop -->
	</div> <!-- md-9 -->
</div>
