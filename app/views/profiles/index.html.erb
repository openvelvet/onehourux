<div class="row">
	<div class="col-md-3">
		<div class="thumbnail">
			<div class="caption">
				<h4>Filters</h4>
				<p>Hello Worl</p>
			</div> <!-- caption -->
		</div> <!-- close thumbnail -->
	</div> <!-- col-md-3 -->
	<div class="col-md-9">
		<% @profiles.each do |profile| %>
			<div class="thumbnail">
				<div class="row">
					<div class="col-sm-2">
						<div class="caption center">
							<%= image_tag(profile.user.linkedin_photo_url, width: "100px", height: "100px", class: "pic") %>		
						</div> <!-- caption -->
					</div> <!-- close sm-3 -->
					<div class="col-sm-7">
						<div class="caption">
							
							<h3 style="margin-top: 0px"><%= "#{profile.user.first_name} #{profile.user.last_name}" %></h3>
							<h4 class="nice-grey"><%= profile.user.headline %> at ReachLocal</h4>
							<h5 class="nice-grey"><%= profile.user.location %></h5>
							<span class="skills">Wireframing</span>
							<span class="skills">Wireframing</span>
							<span class="skills">Wireframing</span>
							<span class="skills">Wireframing</span><br>
							<span class="industry">Wireframing</span>
							<span class="industry">Wireframing</span>
							<span class="industry">Wireframing</span>
							<span class="industry">Wireframing</span>
							<p class="light-grey"><%= profile.user.summary.truncate(168) %></p>
						</div> <!-- caption -->
					</div> <!-- close sm-7 -->
					<div class="col-sm-3">
						<div class="caption">
							<%= link_to "View Profile", profile_path(profile), class: "button button-small btn-block" %>
							<br><br>
							<h3><%= number_to_currency(profile.price) %>/hour</h3>
							<hr>
							<p>3.50/5.00</p>
							<hr>
							<p>English  |  Farsi</p>
						</div>
					</div>
				</div> <!-- row -->
			</div> <!-- close thumbnail -->
		<% end %> <!-- close .each loop -->
	</div> <!-- md-9 -->
</div>
