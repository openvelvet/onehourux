<p>
  <%= image_tag @profile.user.linkedin_photo_url %>
</p>
<p>
  <%= link_to @profile.user.linkedin_url, "#{@profile.user.linkedin_url}" %>
</p>
<p>
  <strong>First Name:</strong>
  <%= @profile.user.first_name %>
</p>
<p>
  <strong>Last Name:</strong>
  <%= @profile.user.last_name %>
</p>
<p>
  <strong>Current Title:</strong>
  <%= @profile.user.headline %>
</p>
<p>
  <strong>Years of experience:</strong>
  <%= @profile.years_of_experience %>
</p>

<p>
  <strong>Experience level:</strong>
  <%= @profile.experience_level %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@profile.price) %>
</p>

<p>
  <strong>Field:</strong>
  <%= @profile.field %>
</p>

<p>
  <strong>Personal URL:</strong>
  <%= "www.bylder.net/profiles/#{@profile.id}" %>
</p>

