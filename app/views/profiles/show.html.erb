  <div class="content">
      <div id="pad-wrapper" class="user-profile">
        <!-- header -->
        <div class="row header">
            <div class="col-md-8">
                <% if @profile.user.linkedin_photo_url.present? %>
                    <%= image_tag(@profile.user.linkedin_photo_url, class: "avatar img-circle", size: "80x80") %>
                <% else %>
                    <%= image_tag(@profile.user.image.url, class: "avatar img-circle", size: "100x100") %>
                <% end %>
                <h3 class="name"><%=  "#{@profile.user.first_name} #{@profile.user.last_name}" %></h3>
                <h4 class="area"><%= @profile.user.headline %></h4><br>
                <span class="area"><%= @profile.user.location %> |</span>  
                <span class="area">LinkedIn Connections: <%= @profile.user.connections %> |</span>
                <span class="area"><%= @profile.user.industry %></span>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <%= link_to "Hire Me Now", new_profile_order_path(@profile), class: "button pull-right", data: { no_turbolink: true } %>
                </div>
                <div class="row">
                    <%= link_to "Send me a message", new_message_path(:user => @user), class: "btn btn-link pull-right" %>
                </div>
                <div class="row">
                    <h2 class="name pull-right"><%= number_to_currency(@profile.price) %></h2>
                </div>
                <div class="row">
                    <p class="pull-right">Per Hour</p>
                </div>
            </div>

           
            
        </div><br>

        <div class="row profile">
            <div class="form-inline">
                <div class="form-group">
                    <%= "#{@average_rating}/5.00" %>
                </div>
                <div class="form-group">
                    <div class="star-rating" data-score= <%= @average_rating %> ></div>
                </div>
            </div>

            <%= "#{@reviews.length} Reviews" %>
            
            <!-- bio, new note & orders column -->
            <div class="col-md-9 bio">
                <div class="profile-box">
                    <!-- biography -->
                    <div class="col-md-12 section">
                        <h6>Professional Summary</h6>
                        <p><%= @profile.user.summary %></p>
                    </div>

                    <h6>Reviews</h6>

                   <% @reviews.each do |review| %>
                        <div class="star-rating" data-score= <%= review.rating %> ></div>
                        <p><%= review.title %></p>
                        <p><%= review.comment %></p>
                        <p><%= review.created_at.strftime("%m/%d/%Y") %></p>
                   <% end %>

                   

                    <!-- new comment form -->
                    <div class="col-md-12 section comment">
                        <h6>Add a quick note</h6>
                        <p>Add a note about this user to keep a history of your interactions.</p>
                        <textarea></textarea>
                        <a href="#">Attach files</a>
                        <div class="col-md-12 submit-box pull-right">
                            <input type="submit" class="button button-small" value="Add Note">
                            <span>OR</span>
                            <input type="reset" value="Cancel" class="btn btn-link">
                        </div>
                    </div>
                </div>
            </div>

            <!-- side address column -->
