<div class="center">
  <h2>Your Sales History</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">My Name</th>
    <th class="center">Price</th>
    <th class="center">Buyer Name</th>
    <th class="center">Date</th>
    <th class="center">Action</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td class="center"><%= order.profile.user.first_name %></td>
      <td class="center"><%= number_to_currency(order.profile.price) %></td>
      <td class="center"><%= order.buyer.first_name %></td>
      <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
      <td class="center"><%= button_to "complete order", complete_purchase_path(order.id), class: "button button-small" %></td>
    </tr>
  <% end %>
</table>