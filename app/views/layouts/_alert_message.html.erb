	<% flash.each do |name, msg| %>
    <% if msg.is_a?(String) && !@disable_nav %>
      <div class="alert alert-<%= name.to_s == "notice" ? "success" : "danger" %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><center>
        <%= content_tag :div, msg, :id => "flash_#{name}" %></center>
      </div>
    <% end %>
  <% end %>