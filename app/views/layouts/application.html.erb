<!DOCTYPE html>
<html>
<head>
  <title>Bylder</title>
  <%= render 'layouts/bootstrap' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <%= render 'layouts/alert_message' %>
  
  <% if current_page?(root_path) %>
    <%= render 'layouts/home_header' %>
    <%= yield %>
  <% else %>
    <%= render 'layouts/header' unless @disable_nav %>
    <div class="container">
      <%= yield %>
    </div>
  <% end %>

	<%= render 'layouts/footer' %>

  <%= render 'layouts/javascript_snippets' %>

</body>
</html>
