<body id="signup">
  <div class="container">
    <div class="row header">
      <div class="col-md-12">
        <h4>Become a Freelance UX Designer</h4>
        <p>
          Earn great money & create your own schedule as an independent contractor.
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="wrapper clearfix">
          <div class="formy">
            <div class="row">
              <div class="col-md-12">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <form role="form">
                  <div class="form-group">
                    <%- if devise_mapping.omniauthable? %>
                      <%- resource_class.omniauth_providers.each do |provider| %>
                        <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-lg btn-block btn-social btn-linkedin" do %>
                          <i class="fa fa-linkedin"></i><%= "#{provider.to_s.titleize} Sign Up" %>
                        <% end %>
                      <% end -%> 
                    <% end %>
                  </div>
                  <div class="form-group center">
                    <label for="name">or</label>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
                  </div>
                  <div class="form-group">
                    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                  </div>
                  <div class="checkbox">
                    <label>
                        <input type="checkbox"> You have read & agree to the 
                        <a href="#">Terms of service</a>.
                    </label>
                  </div>
                  <div class="submit">
                    <%= f.submit "Submit", class: "button" %>
                  </div>
                </form>
              <% end %>
              </div>
            </div>            
          </div>
        </div>
        <div class="already-account">
          Already have an account?
          <%= link_to "Sign In", new_user_session_path %>
        </div>
      </div>
    </div>
  </div>






